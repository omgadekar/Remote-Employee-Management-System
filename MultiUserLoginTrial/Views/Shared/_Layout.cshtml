<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>REMS</title>
    <link rel="icon" href="~/Logo.png" type="image/icon type">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css"
          rel="stylesheet" />
    <script src="~/js/site.js"></script>
    <style>

        .navbar-light .navbar-nav .nav-link {
            color: #000;
        }

        .navbar-nav .nav-item .btn {
            font-size: 0.7em; /* Adjust as needed */
        }

        
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }
        </style>
    <link rel="stylesheet" href="~/MultiUserLoginTrial.styles.css" asp-append-version="true" />
</head>
@{
                    var role = Context.Session.GetString("Role");
                    var redirectToDashboard = role + "Dashboard";
                }
     
<body style="font-family:'Founders Grotesk'; font-size:large;">


    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
            <div class="container-fluid">
                
                @if (role is null)
                {
                    <a class="navbar-brand" asp-action="Index" asp-controller="Home">  <img class="img-fluid" src="~/Logo.png" width="40px" height="40px" /><b>REMS </b> </a>
                }
                else
                {
                    <a class="navbar-brand" asp-action=@redirectToDashboard asp-controller="Dashboard">  <img class="img-fluid" src="~/Logo.png" width="50px" height="50px" /><b>REMS </b> </a>

                }
                <button data-mdb-collapse-init
                class="navbar-toggler"
                        type="button"
                        data-mdb-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("Role") == "Admin" || Context.Session.GetString("Role") == "SuperAdmin")
                        {
                          
                        }else
                        {
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#Features">Features</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#pricing">Pricing</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#AboutUs">About Us</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                      
                            @if (!Context.Session.Keys.Any())
                            {
                            <li class="nav-item ms-3 ">
                                <a class="btn btn-black btn-rounded" asp-area="" asp-controller="Login" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i>&nbsp; Login</a>
                            </li>
                                <li class="nav-item ms-3 ">
                                <a class="btn btn-black btn-rounded"  asp-controller="Login" asp-action="SignUp"><i class="fa-solid fa-user-plus"></i> &nbsp; Sign Up</a>
                            </li>
                            }
                            else
                            {
                                <li>
                                <p class="m-2">Greetings <span class="text-primary">@Context.Session.GetString("Name")</span>! <i class="fa-regular fa-face-smile"></i></p>
                                </li>
                                <li>
                                @if (Context.Session.GetString("Role") == "Admin" || Context.Session.GetString("Role") == "SuperAdmin")
                                {
                                    <a class="btn btn-black btn-rounded" asp-action="Logout" asp-controller="Dashboard"><i class="fa-solid fa-door-open"></i>&nbsp;Logout</a>

                                }
                                else
                                {
                                <button class="btn btn-black btn-rounded" id="logoutbtn"><i class="fa-solid fa-door-open"></i>&nbsp;Logout</button>
                                }
                            </li>
                            }
                        

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="padding-bottom:150px">
        <main role="main" class="pb-3">
            @RenderBody()
            </main>
        </div>
    <footer class="text-center bg-body-tertiary ">
        <!-- Grid container -->
        <div class="container pt-2">
            <!-- Section: Social media -->
            <section class="mb-2">
                <!-- Facebook -->
                <a data-mdb-ripple-init
                   class="btn btn-link btn-floating btn-lg text-body m-1"
                   href="#!"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-facebook-f"></i>
                </a>

                <!-- Twitter -->
                <a data-mdb-ripple-init
                   class="btn btn-link btn-floating btn-lg text-body m-1"
                   href="#!"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-twitter"></i>
                </a>

                <!-- Google -->
                <a data-mdb-ripple-init
                   class="btn btn-link btn-floating btn-lg text-body m-1"
                   href="#!"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-google"></i>
                </a>

                <!-- Instagram -->
                <a data-mdb-ripple-init
                   class="btn btn-link btn-floating btn-lg text-body m-1"
                   href="#!"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-instagram"></i>
                </a>

                <!-- Linkedin -->
                <a data-mdb-ripple-init
                   class="btn btn-link btn-floating btn-lg text-body m-1"
                   href="#!"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-linkedin"></i>
                </a>
                <!-- Github -->
                <a data-mdb-ripple-init
                   class="btn btn-link btn-floating btn-lg text-body m-1"
                   href="#!"
                   role="button"
                   data-mdb-ripple-color="dark">
                    <i class="fab fa-github"></i>
                </a>
            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3 " style="background-color: rgba(0, 0, 0, 0.05);">
            © 2024 Copyright:
            <a class="text-body" href="https://mdbootstrap.com/">REMS.com</a>
        </div>
        <!-- Copyright -->
    </footer>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<!-- MDB -->
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>